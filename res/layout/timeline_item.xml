<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <RelativeLayout
    android:id="@+id/timeline_line"
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:background="@color/magenta" />

  <RelativeLayout
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:gravity="center"
    android:background="@drawable/timeline_circle">

    <TextView
      android:id="@+id/timeline_pcs"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif"
      android:textStyle="bold"
      android:textSize="10dp"
      android:textColor="@color/base3" />
  </RelativeLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/timeline_line"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="-5dp"
    android:orientation="vertical">

    <TextView
      android:id="@+id/timeline_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif"
      android:textSize="20dp"
      android:textColor="@color/base01" />

    <TextView
      android:id="@+id/timeline_break"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-thin"
      android:textSize="12dp"
      android:textColor="@color/base00" />
  </LinearLayout>
</RelativeLayout>
