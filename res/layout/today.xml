<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:fab="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="50dp"
  android:gravity="center"
  android:orientation="vertical">

  <fragment
    android:name="quit.app.toolbar.ToolbarFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <fragment
    android:name="quit.app.progress.ProgressFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp" />

  <Button
    android:id="@+id/toggle_timeline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:fontFamily="sans-serif-light"
    android:textSize="18dp"
    android:textColor="@color/base2"
    android:drawableLeft="@drawable/ic_unfold_more_white_18dp"
    style="?android:attr/borderlessButtonStyle"
    android:text="Show timeline" />
 
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">
 
    <LinearLayout
      android:id="@+id/timeline_center"
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:layout_centerHorizontal="true" />

    <quit.app.timeline.TimelineView
      android:id="@+id/timeline"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:layout_marginLeft="-10dp"
      android:layout_toRightOf="@+id/timeline_center"
      android:visibility="gone" /> 
  </RelativeLayout>
</LinearLayout>
