<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:fab="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <fragment
    android:name="quit.app.toolbar.ToolbarFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <fragment
    android:name="quit.app.progress.ProgressFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

   <TextView
    android:id="@+id/toggle_timeline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginBottom="40dp"
    android:fontFamily="sans-serif-thin"
    android:textSize="20dp"
    android:textColor="@color/base2"
    android:text="Show timeline" />
 
  <quit.app.timeline.TimelineView
    android:id="@+id/timeline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone" /> 
</LinearLayout>
